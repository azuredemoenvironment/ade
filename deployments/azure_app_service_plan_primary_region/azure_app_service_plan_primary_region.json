{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location For All Resources."
            }
        },
        "primaryRegionAppServicePlanName": {
            "type": "string",
            "metadata": {
                "description": "The Name of the Primary Region App Service Plan."
            }
        }
    },
    "variables": {
        "environmentName": "Production",
        "functionName": "AppServicePlan",
        "costCenterName": "IT"
    },
    "resources": [
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2016-09-01",
            "name": "[parameters('primaryRegionAppServicePlanName')]",
            "location": "[parameters('location')]",
            "dependsOn": [],
            "tags": {
                "Environment": "[variables('environmentName')]",
                "Function": "[variables('functionName')]",
                "Cost Center": "[variables('costCenterName')]"
            },
            "sku": {
                "name": "P1v3",
                "tier": "PremiumV3",
                "size": "P1v3",
                "family": "Pv3",
                "capacity": 1
            },
            "kind": "app",
            "properties": {
                "name": "[parameters('primaryRegionAppServicePlanName')]",
                "perSiteScaling": false,
                "reserved": false,
                "targetWorkerCount": 0,
                "targetWorkerSizeId": 0
            }
        }
    ]
}
