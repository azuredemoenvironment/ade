        {
            "type": "Microsoft.Network/loadBalancers",
            "apiVersion": "2018-04-01",
            "name": "[parameters('nTierDBLoadBalancerName')]",
            "location": "[parameters('location')]",
            "dependsOn": [],
            "tags": {
                "Environment": "[variables('environmentName')]",
                "Function": "[variables('functionName')]",
                "Cost Center": "[variables('costCenterName')]"
            },
            "sku": {
                "name": "Basic"
            },
            "properties": {
                "frontendIPConfigurations": [
                    {
                        "name": "[variables('nTierDBLoadBalancerFrontEndIPConfigurationName')]",
                        "properties": {
                            "subnet": {
                                "id": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/', parameters('virtualNetwork02ResourceGroupName'), '/providers/','Microsoft.Network/virtualNetworks/', parameters('virtualNetwork02Name'), '/subnets/', variables('nTierDBSubnetName'))]"
                            },
                            "privateIPAddress": "[variables('nTierDBLoadBalancerPrivateIPAddress')]",
                            "privateIPAllocationMethod": "Static"
                        }                        
                    }
                ],
                "backendAddressPools": [
                    {
                        "name": "[variables('nTierDBLoadBalancerBackendPoolName')]"
                    }
                ],
                "loadBalancingRules": [
                    {
                        "name": "[variables('nTierDBLoadBalancerRuleName')]",
                        "properties": {
                            "frontendIPConfiguration": {
                                "id": "[resourceId('Microsoft.Network/loadBalancers/frontendIPConfigurations', parameters('nTierDBLoadBalancerName'), variables('nTierDBLoadBalancerFrontEndIPConfigurationName'))]"
                            },
                            "backendAddressPool": {
                                "id": "[resourceId('Microsoft.Network/loadBalancers/backendAddressPools', parameters('nTierDBLoadBalancerName'), variables('nTierDBLoadBalancerBackendPoolName'))]"
                            },
                            "probe": {
                                "id": "[resourceId('Microsoft.Network/loadBalancers/probes', parameters('nTierDBLoadBalancerName'), variables('nTierDBLoadBalancerProbeName'))]"
                            },
                            "protocol": "Tcp",
                            "frontendPort": 3306,
                            "backendPort": 3306,
                            "idleTimeoutInMinutes": 15
                        }                        
                    }
                ],
                "probes": [
                    {
                        "name": "[variables('nTierDBLoadBalancerProbeName')]",
                        "properties": {
                            "protocol": "Tcp",
                            "port": 3306,
                            "intervalInSeconds": 15,
                            "numberOfProbes": 2
                        }                        
                    }
                ]
            },
            "resources": [
                {
                    "type": "providers/diagnosticSettings",
                    "apiVersion": "2017-05-01-preview",
                    "name": "[concat('Microsoft.Insights/', parameters('nTierDBLoadBalancerName'), '-Diagnostics')]",
                    "dependsOn": [
                        "[resourceId('Microsoft.Network/loadBalancers', parameters('nTierDBLoadBalancerName'))]"
                    ],
                    "tags": {},
                    "properties": {
                        "name": "[concat(parameters('nTierDBLoadBalancerName'), '-Diagnostics')]",
                        "workspaceId": "[variables('logAnalyticsWorkspaceID')]",
                        "logs": [
                            {
                                "category": "LoadBalancerAlertEvent",
                                "enabled": true,
                                "retentionPolicy": {
                                    "days": 7,
                                    "enabled": true
                                }
                            },
                            {
                                "category": "LoadBalancerProbeHealthStatus",
                                "enabled": true,
                                "retentionPolicy": {
                                    "days": 7,
                                    "enabled": true
                                }
                            }
                        ],
                        "metrics": [
                            {
                                "category": "AllMetrics",
                                "enabled": true,
                                "retentionPolicy": {
                                    "days": 7,
